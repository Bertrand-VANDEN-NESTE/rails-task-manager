<h1 class="fw-bold"><%= @task.title %></h1>
<ul>
  <li><%= @task.details %></li>
  <li><% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %></li>
</ul>

<%= link_to 'Back', tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
